<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:paddingBottom="15dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/authorImage"
                android:layout_width="fill_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/sample_author" />


            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/authorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#BB000000"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Author Title"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></TextView>

        </RelativeLayout>


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/authorDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:text="This is a sample abstract that is full of randomness and ..."
            android:textColor="#ff000000"
            android:textSize="14sp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/readMoreAuthor"
                style="android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_bg"
                android:gravity="center"
                android:text="READ MORE"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                style="android:attr/borderlessButtonStyle"
                android:id="@+id/showPapersAuthor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/custom_bg"
                android:gravity="center"
                android:text="SHOW PAPERS"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
