<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/about_us_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="qa.dcsdr.diplomaticclub.Activities.AboutUsActivity">


        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <ScrollView
            android:layout_below="@id/app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/aboutUsImageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >


                <ImageView
                    android:id="@+id/aboutUsImage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimaryDark"
                    android:paddingTop="-2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/publications_cat_compressed" />

                <TextView
                    android:id="@+id/aboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/aboutUsImage"
                    android:background="#99000000"
                    android:fontFamily="sans-serif-light"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/ABOUT_US"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/aboutUs"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/about_us_p1"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_us_p1" />

                    <TextView
                        android:id="@+id/about_us_p2"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="@string/about_us_p2" />
                </LinearLayout>
            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="qa.dcsdr.diplomaticclub.Fragments.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer">

    </fragment>

</android.support.v4.widget.DrawerLayout>
