<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qa.dcsdr.diplomaticclub">

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name=".Tools.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_dcsdr_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name=".Activities.PublicationsActivity"
            android:label="@string/title_activity_publications"
            android:parentActivityName=".Activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.DisplayArticleListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_display_articles"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.CategoryListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.CategoryListActivity" />
        </activity>


        <activity
            android:name=".Activities.ArticleReader"
            android:label="@string/title_activity_article_reader"
            android:noHistory="true"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".Activities.DisplayArticleListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.DisplayArticleListActivity" />
        </activity>

        <activity
            android:name=".Activities.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:parentActivityName=".Activities.HomePageActivity"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".Activities.CategoryListActivity"
            android:label="@string/title_activity_category_list"
            android:parentActivityName=".Activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".Activities.Category$ResearchAndStudies"
            android:label="@string/title_activity_category_list"
            android:launchMode="singleTask"
            android:parentActivityName=".Activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".Activities.Category$Publications"
            android:label="@string/title_activity_category_list"
            android:launchMode="singleTask"
            android:parentActivityName=".Activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".Activities.Category$DisputesResolution"
            android:label="@string/title_activity_category_list"
            android:launchMode="singleTask"
            android:parentActivityName=".Activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".Activities.Category$ProgramsAndProjects"
            android:label="@string/title_activity_category_list"
            android:launchMode="singleTask"
            android:parentActivityName=".Activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>
        <activity
            android:name=".Activities.Category$Events"
            android:label="@string/title_activity_category_list"
            android:launchMode="singleTask"
            android:parentActivityName=".Activities.HomePageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>


        <activity
            android:name=".Activities.ContactUsActivity"
            android:label="@string/title_activity_contact_us"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:parentActivityName=".Activities.HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.HomePageActivity" />
        </activity>


        <activity
            android:name=".Activities.HomePageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_home_page"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AuthorsActivity"
            android:label="@string/title_activity_authors"
            android:launchMode="singleTask"></activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />


    </application>

</manifest>
