<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:paddingBottom="10dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hpCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:paddingRight="40dp"
            android:paddingEnd="40dp"
            android:text="Sample Category"
            android:background="@color/colorWhite"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp">
        </TextView>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/hpCategoryImage"
            android:layout_width="match_parent"
            android:layout_below="@id/hpCategoryTitle"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:src="@drawable/publications_cat_compressed" />

        <Button
            android:id="@+id/openCategory"
            style="android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hpCategoryImage"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/custom_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:text="OPEN CATEGORY"
            android:textColor="@color/colorWhite"
             />
    </RelativeLayout>


</android.support.v7.widget.CardView>